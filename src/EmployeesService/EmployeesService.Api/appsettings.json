{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Seq"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Seq",
        "Args": { "serverUrl": "http://employees-service.seq:5341" }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "Employees.Api"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Database": "Host=employees-service.db; Port=5432; Database=employees; User Id=postgres; Password=postgres; Include Error Detail=true",
    "Redis": "employees-service.redis:6379"
  },
  "EmployeesCachingOptions": {
    "ByDepartmentKeyPattern": "employees_by_deps_{0}",
    "ByDepartmentExpiration": "00:05:00",
    "ByDepartmentSlidingExpiration": "00:00:30",
    "ByCompanyKeyPattern": "employees_by_comp_{0}",
    "ByCompanyExpiration": "00:05:00",
    "ByCompanySlidingExpiration": "00:00:30"
  }
}

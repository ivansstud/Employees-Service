{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Seq"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Seq",
        "Args": { "serverUrl": "http://employees-service.seq:5341" }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "Employees.Api"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Default": "Host=employees-service.db; Port=5432; Database=employees; User Id=postgres; Password=postgres; Include Error Detail=true"
  }
}
